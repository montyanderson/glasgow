{
	"tasks": {
		"start": "deno run --allow-net --allow-env main.ts",
		"dev": "deno run --allow-net --allow-env --watch=. main.ts"
	},
	"importMap": "./import_map.json",
	"fmt": {
		"options": {
			"useTabs": true,
			"lineWidth": 80,
			"indentWidth": 4,
			"singleQuote": false,
			"proseWrap": "preserve"
		}
	}
}
